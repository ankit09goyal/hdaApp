<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/listview"
    android:layout_gravity="center"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="2dp"
    android:layout_marginLeft="2dp"
    android:orientation="vertical"
    android:paddingBottom="5dp" >

    <RelativeLayout
        android:id="@+id/row1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="6dip" >

        <!-- User image -->

        <ImageView
            android:id="@+id/userImg"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="6dip"
            android:contentDescription="@string/imgDesc"
            android:src="@drawable/ic_launcher" />

        <!-- heading -->

        <TextView
            android:id="@+id/heading"
            style="@style/ListName"
            android:shadowColor="#FFF"
            android:layout_marginRight="6dip"
            android:layout_toRightOf="@id/userImg"
            android:textColor="#333"
            android:text=" Hi sample to test the font d height of the heading" />

        <!-- description -->

        <TextView
            android:id="@+id/description"
            android:layout_width="fill_parent"
            android:layout_height="32dip"
            android:layout_below="@id/heading"
            android:layout_marginRight="6dip"
            android:layout_toRightOf="@id/userImg"
              android:textColor="#767676"
            android:maxLines="2"
            android:text="this is the description.this is tas asd a dasdsadad asd asdlk hethis is the descriptio this is the description.this is the description.this is the description."
            android:textSize="12sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/row2"
        android:layout_width="match_parent"
        android:layout_height="20dip"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/postedBy"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginRight="6dip"
            android:layout_weight="1"
              android:textColor="#bbbbbb"
            android:lines="1"
            android:gravity="center_horizontal|center_vertical"
            android:text="By: Ankit"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/comments"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginRight="6dip"
            android:layout_weight="1"
              android:textColor="#bbbbbb"
            android:gravity="center_horizontal|center_vertical"
            android:text="Comments: 50"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/date"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginRight="6dip"
            android:layout_weight="1"
              android:textColor="#bbbbbb"
            android:gravity="center_horizontal|center_vertical"
            android:text="24 Aug, 14"
            android:textSize="10sp" />
    </LinearLayout>

</LinearLayout>